<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFirstApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBoxObject1" HorizontalAlignment="Left" Height="38" Margin="44,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Foreground="#FFF50000" Padding="10,8,0,0">
            <TextBox.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="ButtonObject1" Content="Add/Enter" HorizontalAlignment="Left" Margin="389,32,0,0" VerticalAlignment="Top" Width="126" Height="38"/>
        <Label x:Name="LabelObject1" Content="" HorizontalAlignment="Left" Margin="44,99,0,0" VerticalAlignment="Top" Height="33" Width="305" Foreground="#FF8B0404" Padding="14,8,5,5">
            <Label.Background>
                <SolidColorBrush Color="#FFBFCDDB"/>
            </Label.Background>
        </Label>

    </Grid>
</Window>
